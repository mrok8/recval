.breadcrumb[style="color: #999;"]
  .breadcrumb-2[style="color: #666;"]
    = render_breadcrumbs separator: ' > '
div[style="width:100%;"]
  div[style="width: 58%;float:left;margin-left: 60px;"]
    .first-view
      h1 = @topic.title
      .img-decript
        = image_tag @topic.thumb_url ,class: "top-img"
        span.first-description = @topic.description

    .topic-main
      = @topic[:text].html_safe
    = render 'partial_contents/same_category_topics'

  div[style="width: 30%;float:right;margin-right: 60px;"]
    / div.ad-300-600


css:
  .recommender-label{
    background-color: #59A2F5;
    color: white;
    text-align: center;
    padding: 4px 10px;
  }
  h2{
    border-bottom: 1px solid #59A2F5;
  }
  h3{
    color: #59A2F5;
  }
  .first-description{
    display: inline-block;
    position: absolute;
    width: 70%;
    margin-left: 18px;
    color: #555;
  }
  .img-decript{
    position: relative;
    width: 100%;
  }
  .first-view{
    width: 100%
  }
  blockquote{
    background-color: #ddd;
    padding: 1.5em 1em 0.5em;
    position: relative;
    border: 3px solid #d7d7d7;
    margin: 0 1em 1.5em;
  }
  blockquote:before{
      content: "“";
      font-size: 400%;
      line-height: 1em;
      font-family: "ＭＳ Ｐゴシック",sans-serif;
      color: #999;
      position: absolute;
      left: 0;
      top: 0;
  }
  blockquote:after{
      content: "”";
      font-size: 400%;
      line-height: 0em;
      font-family: "ＭＳ Ｐゴシック",sans-serif;
      color: #999;
      position: absolute;
      right: 0;
      bottom: 0;
  }
  .top-img{
    width: 30%;
    display:inline-block;
  }
  .topic-img{
    width: 100%;
  }
  div.buttom{
    width: 50%;
    margin-top: 10px;
    font-size: 15px;
    padding: 12px 0px;
    text-align: center;
    background: #fff;
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-transition: none;
    transition: none;
    border: 1px solid #59A2F5;
    margin: 0 auto;
  }
  .buttom-div{
    width: 100%;
    padding: 16px;
  }
  .breadcrumb{
    width: 100%;
    border-bottom: 1px solid #59A2F5;
  }
  .breadcrumb-2{
    margin: 12px 36px;
  }
  .topic-img-style{
    width: 45%;
    display: inline-block;
  }
  .row-right{
    display: inline-block;
    width: 30%;
    position: absolute;
    margin-left: 12px;
  }
  .row-img{
    display: inline-block;
    width: 50%;
  }
  .ad-300-250{
    height: 250px;
    width: 300px;
    background-color: gray;
    margin: 0 auto;
  }
  .ad-300-600{
    height: 600px;
    width: 300px;
    background-color: gray;
    margin: 0 auto;
  }
  .citation-url{
    font-size: 12px;
    line-height: 21px;
    color: #a3a3a3;
    overflow: hidden;
    -o-text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
    text-overflow: ellipsis;
    max-width: 95%;
    white-space: nowrap;
    display: inline-block;
    vertical-align: middle;
  }
  .no-decoration{
  text-decoration: none;
  }