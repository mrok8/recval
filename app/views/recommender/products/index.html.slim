div[style="margin-left: 120px;width: 100%;"]
  div.main-div
    h2 オススメ商品一覧
    =button_to 'オススメ商品作成', {action: "new"},{method: "get"}
    div[style="margin: 10px"]
      - @products.each_with_index do |p,i|
        = link_to recommender_products_edit_path(p.id) do
          .category-card
            .img-style
              = image_tag p.image_url, class: "category-card-img"
            .container
               p = p.title
            i class="fa fa-folder-open-o" aria-hidden="true"
              = @category_name[i]
            br
            i class="fa fa-hashtag" aria-hidden="true"
              = @need_name[i]

  / div.side-div

css:
  .writer-topic-list{
    width: 60%;
    border-bottom: 1px solid #ddd;
  }
  .writer-topic-img{
    height: 100px;
    width: 100px;
  }
  .card-img{
    display: inline-block;
    height: 100%;
    width: 20%;
  }
  .list-none{
    list-style: none;
  }
  .card-right{
    display: inline-block;
    margin: 0px 10px;
    position: relative;
    top: -14px;
    width:69%;
  }
  .category-card{
    display: inline-block;
    width: 20%;
    position: relative;
    margin: 10px 10px 10px 0px;
    border: 1px solid #e3e3e3;
  }
  .category-card-img{
    width: 100%;
  }
  .category-card-text{
    position: absolute;
    top: 40%;
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 2;
    color: white;
  }
  .black-window{
    position: absolute;
    bottom: 5px;
    left: 0;
    z-index: 2;
    opacity: 0.3;
    background-color: black;
    width: 100%;
    height: 125px;
  }
  .img-style{
    position:relative;
  }
  .main-div{
    width: 100%;
    display: inline-block;
  }
  .side-div{
    width: 20%;
    display: inline-block;
    margin-right:20px;
  }
  .max-width{
    width: 100%;
  }
  // Reset
  p {
    margin: 0;
  }
  .container {
    / background: #eee;
    overflow: hidden;
    width: 100%;
    height: 90px;
  }
  p {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
